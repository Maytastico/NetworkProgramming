# Generated by ChatGPT ;-)
# Define the compiler
CC = gcc

# Define compilation flags
CFLAGS = -Wall -O2

# List all your source files (C files) here
SRCS = $(wildcard *.c)

# Generate the list of corresponding object files
OBJS = $(SRCS:.c=.o)

# Define the target executable names
EXECS = $(OBJS:.o=)

# Default target: build all executables
all: $(EXECS)

# Rule to build an executable from a corresponding source file
%: %.c
	$(CC) $(CFLAGS) -o $@ $<

# Clean up object files and executables
clean:
	rm -f $(OBJS) $(EXECS)
